@model p_bd1_proveedores_cuentas_por_pagar.Models.Departamento

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Departamento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NOMBRE_PAIS" class="control-label"></label> <br />
                @{

                    List<SelectListItem> paises = ViewBag.paises;
                    @Html.DropDownListFor(x => x.ID_PAIS, paises, "Seleccione pais");
                }
                <span asp-validation-for="NOMBRE_PAIS" class="text-danger"></span>
            </div>



            <div class="form-group">
                <label asp-for="NOMBRE_DEPARTAMENTO" class="control-label"></label>
                <input asp-for="NOMBRE_DEPARTAMENTO" class="form-control" />
                <span asp-validation-for="NOMBRE_DEPARTAMENTO" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>


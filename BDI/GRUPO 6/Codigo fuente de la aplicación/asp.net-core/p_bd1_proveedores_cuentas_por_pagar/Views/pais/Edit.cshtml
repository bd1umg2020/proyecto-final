@model p_bd1_proveedores_cuentas_por_pagar.Models.Pais

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Pais</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ID_PAIS" class="control-label"></label>
                <input asp-for="ID_PAIS" class="form-control" readonly="readonly" />
                <span asp-validation-for="ID_PAIS" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NOMBRE_PAIS" class="control-label"></label>
                <input asp-for="NOMBRE_PAIS" class="form-control" />
                <span asp-validation-for="NOMBRE_PAIS" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
        @if (ViewBag.error != null)
        {
            <hr />
            <p style="color: red;">Error al editar pais. Detalles: @ViewBag.error</p>
        }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

